generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id    String  @id @default(uuid())
  phone String  @unique
  name  String?
  team  Team?
}

model Player {
  id           String         @id @default(uuid())
  name         String
  position     String
  chosenPlayer ChosenPlayer[]
}

model Round {
  id           String         @id @default(uuid())
  start_date   String
  end_date     String
  number       Int
  chosenPlayer ChosenPlayer[]
}

model ChosenPlayer {
  id                    String                  @id @default(uuid())
  playerId              String
  roundId               String
  score                 Int
  round                 Round                   @relation(fields: [roundId], references: [id])
  player                Player                  @relation(fields: [playerId], references: [id])
  teamsOnPlayers        TeamsOnPlayers[]
  chosenPlayersOnPoints ChosenPlayersOnPoints[]
}

model Team {
  id             String           @id @default(uuid())
  name           String
  userId         String           @unique
  user           User             @relation(fields: [userId], references: [id])
  teamsOnPlayers TeamsOnPlayers[]
}

model TeamsOnPlayers {
  id             String       @id @default(uuid())
  chosenPlayerId String
  teamId         String
  teams          Team         @relation(fields: [teamId], references: [id])
  chosenPlayer   ChosenPlayer @relation(fields: [chosenPlayerId], references: [id])
}

model Points {
  id                    String                  @id @default(uuid())
  value                 Float
  label                 String
  code                  String
  chosenPlayersOnPoints ChosenPlayersOnPoints[]
}

model ChosenPlayersOnPoints {
  id             String        @id @default(uuid())
  chosenPlayerId String?
  chosenPlayer   ChosenPlayer? @relation(fields: [chosenPlayerId], references: [id])
  point          Points        @relation(fields: [pointId], references: [id])
  pointId        String
}
